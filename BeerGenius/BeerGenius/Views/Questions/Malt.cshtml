
@{
    ViewData["Title"] = "Malt";
}

<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">

<div class="w3-light-grey w3-round-xlarge">
    <div class="w3-container w3-orange w3-round-xlarge" style="width:30%">30%</div>
</div>

<h1>Would you like a beer with a strong malt character?</h1>

<form asp-controller="Home" asp-action="Malt" method="post">
    <button type="submit" value=1 name="questionResult">No, I'd like a lighter-bodied beer</button>
    <button type="submit" value=2 name="questionResult">A malty presence is acceptable</button>
    <button type="submit" value=3 name="questionResult">Yes, I want a beer with a bready or caramel like character</button>
</form>
