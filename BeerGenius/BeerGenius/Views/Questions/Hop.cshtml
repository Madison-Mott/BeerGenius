@{
    ViewData["Title"] = "Hop";
}

<h1>Would you like a beer that is hoppy?</h1>

<form asp-controller="Home" asp-action="Hop" method="post">
    <input type="radio" value=1 name="questionResult" />Yes<br />
    <input type="radio" value=2 name="questionResult" />Not Sure<br />
    <input type="radio" value=3 name="questionResult" />No<br />
    <input type="submit" />
</form>
