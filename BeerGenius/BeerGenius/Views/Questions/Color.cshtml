
@{
    ViewData["Title"] = "Color";
}

<h1>Would you like a beer that is light or dark in color?</h1>

<form asp-controller="Home" asp-action="Color" method="post">
    <input type="radio" value=1 name="questionResult" />Light<br />
    <input type="radio" value=2 name="questionResult" />Not Sure<br />
    <input type="radio" value=3 name="questionResult" />Dark<br />
    <input type="submit" />
</form>