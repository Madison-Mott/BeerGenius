
@{
    ViewData["Title"] = "Color";
}

<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">

<div class="w3-light-grey w3-round-xlarge">
    <div class="w3-container w3-orange w3-round-xlarge" style="width:90%">90%</div>
</div>

<h1>Would you like a beer that is light or dark in color?</h1>

<form asp-controller="Home" asp-action="Color" method="post">
    <button type="submit" value=1 name="questionResult">I want a beer with a clean, light color</button>
    <button type="submit" value=2 name="questionResult">I'd like a beer that's gold to amber in hue</button>
    <button type="submit" value=3 name="questionResult">I want a really dark beer!</button>
</form>