
@{
    ViewData["Title"] = "Sour";
}

<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">

<div class="w3-light-grey w3-round-xlarge">
    <div class="w3-container w3-orange w3-round-xlarge" style="width:50%">50%</div>
</div>

<h1>Would you like a beer that is sour?</h1>

<form asp-controller="Home" asp-action="Sour" method="post">
    <button type="submit" value=1 name="questionResult">No</button>
    <button type="submit" value=2 name="questionResult">Maybe</button>
    <button type="submit" value=3 name="questionResult">Yes</button>
</form>

