@model BeerRootobject

@{
    ViewData["Title"] = "DisplayFinalResults";
    var random = new Random();
    var suggestedBeerInt = random.Next(Model.data.Length);
    var suggestedBeer = Model.data[suggestedBeerInt];
}
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">

<div class="w3-light-grey w3-round-xlarge">
    <div class="w3-container w3-orange w3-round-xlarge" style="width:100%">100%</div>
</div>

<div style="text-align: center;">
    <div class="wordart italic-outline"><span class="text">Your Suggested Style is...</span></div>
    <h1 class="neon"><span class="text">@suggestedBeer.style.name!</span></h1>

    @if (Model.FlavorProfile.TimesSelected == 1)
    {
        <h4>You're the first user to be paired with this style!</h4>
    }
    else
    {
        <h4>This style has been matched with users @Model.FlavorProfile.TimesSelected time(s)</h4>
    }
</div>

@if (Model.UserFlavorProfile.PerfectMatch == true)
{
    <div class="text-center">
        <h1>We found you a perfect match!</h1>
        <h4>All of your flavor preferences match this style</h4>
    </div>
}
else
{
    <h2 style="text-align: center;">Here's an overview of your results</h2>
}

<style>

    :root {
        --brand-color-1: rgba( 87, 38, 15, 0.5 );
        --brand-color-2: rgba( 255, 191, 0, 0.5 );
        --brand-color-3: rgba( 212, 88, 72, 0.5 )
    }

    .beer-match {
        width: 200px;
        height: 200px;
        display: flex;
        flex-flow: column nowrap;
        align-items: center;
        justify-content: center;
        padding: 10px;
        margin-top: 15px;
        text-align: center;
        box-shadow: 2px 2px 15px rgba( 0, 0, 0, 0.3 );
    }

        .beer-match > img {
            max-width: 35px;
            max-height: 35px;
        }

    #hop {
        background-color: var(--brand-color-2);
    }

    #color {
        background-color: var(--brand-color-1);
    }

    #abv {
        background-color: var(--brand-color-3);
    }

    #crisp {
        background-color: var(--brand-color-2);
    }

    #fruit {
        background-color: var(--brand-color-1);
    }

    #malt {
        background-color: var(--brand-color-3);
    }

    #roast {
        background-color: var(--brand-color-2);
    }

    #sour {
        background-color: var(--brand-color-1);
    }

    #sweet {
        background-color: var(--brand-color-3);
    }
</style>

//<h2 style="text-align: center;">Here's an overview of your results</h2>

<div style="display: flex; flex-flow: row wrap; justify-content: space-around;">

    <div id="hop"
            class="beer-match">

        <img src="/assets/hop-icon.png" />

        @if (Model.FlavorProfile.Hop > Model.UserFlavorProfile.Hop)
        {
            <h4>This beer style is <strong>more hoppy</strong> than you wanted</h4>
        }
        else if (Model.FlavorProfile.Hop < Model.UserFlavorProfile.Hop)
        {
            <h4>This beer style is <strong>less hoppy</strong> than you wanted</h4>
        }
        else
        {
            <h4>This beer style <strong>matches</strong> your preference for <strong>hoppiness</strong></h4>
        }
    </div>

    <div id="color"
            class="beer-match">

        @if (Model.FlavorProfile.Color == 1)
        {
            <img src="/assets/light-beer.png" />
        }
        else if (Model.FlavorProfile.Color == 2)
        {
            <img src="/assets/color-beer.png" />
        }
        else
        {
            <img src="/assets/dark-beer.png" />
        }

        @if (Model.FlavorProfile.Color > Model.UserFlavorProfile.Color)
        {
            <h4>This beer style has a <strong>darker color</strong> than you wanted</h4>
        }
        else if (Model.FlavorProfile.Color < Model.UserFlavorProfile.Color)
        {
            <h4>This beer style has a <strong>lighter color</strong> than you wanted</h4>
        }
        else
        {
            <h4>This beer style <strong>matches</strong> your preference for <strong>color</strong></h4>
        }


    </div>
