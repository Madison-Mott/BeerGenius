@model StyleRequest

@{
    ViewData["Title"] = "ListOfBeerStyles";
}

<h1>ListOfBeerStyles</h1>


<table class="table">
    <tr>
        <th>
            Name
        </th>
        <th>
            Description
        </th>
        <th>
            ABV
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.data)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.shortName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.abvMax)
            </td>
        </tr>
    }

</table>
